<body>
<h3>Contact Form</h3>
    <div class="container">
        <!-- <form onsubmit="alert('Your Form Is Saved')"> -->
            <form method="POST" role="form">
            <label for="fname">First Name</label>
            <input type="text" id="fname" name="firstname" placeholder="Vamshi Krishna"
            pattern="[A-Za-z\s-]{0,}" title="Enter only alphabets" required>

            <label for="lname">Last Name</label>
            <input type="text" id="lname" name="lastname" placeholder="Nuka"
            pattern="[A-Za-z\s-]{0,}" title="Enter only alphabets" required>

            <label for="emial">Email Id</label>
            <input type="text" id="email" name="email" placeholder="mail@example.com" 
            pattern="^[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$" title="Invalid Email Id" required>    

            <label for="country">Country</label>
            <select id="country" name="country" required>
                <option value=""></option>
                <option value="india">India</option>
                <option value="australia">Australia</option>
                <option value="canada">Canada</option>
                <option value="usa">USA</option>
            </select>

            <label for="subject">Subject</label>
            <textarea id="subject" name="subject" placeholder="Write something.." style="height:200px"></textarea>
            <button type="submit" name="Submit">Submit</button>
        </form>
    </div>
